    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QRScanCameraViewActivity">

    <io.scanbot.sdk.camera.ScanbotCameraView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

