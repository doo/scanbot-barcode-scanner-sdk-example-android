<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context="io.scanbot.sdk.internal.demo.io.scanbot.sdk.internaldemo.MainActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="16dp"
                android:text="@string/scanbot_sdk_demo"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/warning_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/warning_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/no_license_found_the_app_will_terminate_after_one_minute"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/qr_demo"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Classic Component"

                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/classical_ar_overlay_demo"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Classic Component with AR Overlay"

                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/classical_scan_count_demo"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Scan and Count "

                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/classical_batch"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Batch Barcode Classic Component"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/classical_barcode_document_parser"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Barcode Document Parser"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="RTU UI"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_selection_overlay"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="RTU UI - with selection overlay"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_batch_mode"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="RTU UI - batch barcode scanning"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_multiple_unique"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="RTU UI - multiple unique barcode scanning"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_find_and_pick"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="RTU UI - find and pick barcode scanning"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_import"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Pick image from library"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_import_pdf"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Pick pdf from library"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/settings"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Set accepted barcodes"
                android:textColor="@color/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
